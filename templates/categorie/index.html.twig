{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des Categories</h1>

    <table class="mt-3 table table-light table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Catégorie</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}               
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td><a class = "text-decoration-none btn btn-primary" href = "{{ path('app_categorie_modifier', {'id': categorie.id})}}">Modifier</a></td>
                </tr>       
            {% endfor %}
        </tbody>
    </table>
</div>
<div class="example-wrapper">
<a class ="text-decoration-none btn btn-primary" href = "{{ path('app_categorie_ajouter')}}">Ajouter une Catégorie</a>
</div>
{% endblock %}