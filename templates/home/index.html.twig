{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des Articles</h1>

    <table class="mt-3 table table-light table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date de Cr√©ation</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}               
                <tr>
                    <td><a href="{{ path('app_article_detail', {'id': article.id}) }}">{{ article.nom }}</a></td>
                    <td>{{ article.contenu|split(' ')|slice(0, 5)|join(' ') }}</td>
                    <td>{{ article.dateDeCreation|date('Y-m-d') }}</td>
                </tr>       
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
